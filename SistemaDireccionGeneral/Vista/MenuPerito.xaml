        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="100" Margin="10,20,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.46,0.23">
            <Border.Background>
                <ImageBrush ImageSource="/SistemaDireccionGeneral;component/Imagenes/veracruzlogo.png" Stretch="Uniform"/>
            </Border.Background>
        </Border>
        <Button Content="Cerrar Sesion" HorizontalAlignment="Left" Margin="93,362,0,0" VerticalAlignment="Top" Width="88" Height="40" FontWeight="Bold"/>
        <Button Content="Chat" HorizontalAlignment="Left" Margin="433,362,0,0" VerticalAlignment="Top" Width="74" Height="40" FontWeight="Bold"/>
        <Button Content="Registrar Usuario" HorizontalAlignment="Left" Margin="70,162,0,0" VerticalAlignment="Top" Width="145" Height="40" FontWeight="Bold"/>
        <Button Content="Consultar Usuario" HorizontalAlignment="Left" Margin="70,229,0,0" VerticalAlignment="Top" Width="145" Height="40" FontWeight="Bold"/>
        <Button Content="Registrar Delegacion" HorizontalAlignment="Left" Margin="407,162,0,0" VerticalAlignment="Top" Width="145" Height="40" FontWeight="Bold"/>
        <Button Content="Consultar Delegacion" HorizontalAlignment="Left" Margin="407,229,0,0" VerticalAlignment="Top" Width="145" Height="40" FontWeight="Bold"/>

